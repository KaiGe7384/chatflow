{
  "name": "chatflow",
  "version": "1.0.0",
  "description": "ChatFlow - 现代化的即时通讯应用，基于React和Socket.io构建",
  "main": "start.js",
  "scripts": {
    "start": "node start.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm start",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "clean": "rm -rf node_modules server/node_modules client/node_modules client/build"
  },
  "keywords": [
    "chat",
    "websocket",
    "react",
    "nodejs",
    "realtime",
    "instant-messaging",
    "socket.io"
  ],
  "author": "ChatFlow Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/chatflow.git"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "socket.io-client": "^4.8.1"
  }
}
